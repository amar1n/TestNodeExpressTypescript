{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "outDir": "./build"
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
